<?xml version="1.0" encoding="utf-8"?><com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="10dp"
    android:elevation="20dp"
    app:cardCornerRadius="20dp">

    <View
        android:id="@+id/viewColorTag"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="5dp"
        android:background="@android:color/white"
        android:paddingBottom="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:padding="5dp">



            <TextView
                android:id="@+id/txtShowTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginEnd="5dp"
                android:layout_toStartOf="@+id/txtShowCategory"
                android:ellipsize="end"
                android:maxLines="1"
                tools:text="Task Title"
                android:textColor="#303030"
                android:textSize="20sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/txtShowDisc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/txtShowTitle"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:maxLines="1"
                tools:text="Task Subtitle"
                android:textColor="@android:color/black"
                android:textSize="16sp" />



            <TextView
                android:id="@+id/textInitial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignParentEnd="true"
                android:layout_marginRight="85dp"
                android:text="Start:"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/txtShowInitial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="15dp"
                android:layout_alignRight="@+id/textInitial"
                android:paddingRight="10dp"
                tools:text="01"
                android:textColor="@android:color/black"
                android:visibility="visible" />

            <TextView
                android:id="@+id/textFinal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/textInitial"
                android:layout_marginRight="85dp"
                android:text="Finish:"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/txtShowFinal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="15dp"
                android:layout_below="@+id/textInitial"
                android:paddingRight="10dp"
                tools:text="33"
                android:textColor="@android:color/black"
                android:visibility="visible" />

            <CheckBox
                android:id="@+id/cbDone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtShowDisc"
                android:layout_marginLeft="155dp"
                android:layout_marginTop="-39dp"
                android:text="CheckBox" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_below="@+id/cbDone"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/imgBtnIncrease"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="25dp"
                    app:srcCompat="@drawable/increase" />

                <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="200dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_height="5dp"
                android:layout_below="@+id/cbDone"
                android:progressDrawable="@color/purple_200"
                android:scrollbarAlwaysDrawHorizontalTrack="true"


                />

                <ImageButton
                    android:id="@+id/imgBtnDecrease"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    app:srcCompat="@drawable/decrease"

                                        />
            </LinearLayout>
        </RelativeLayout>

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>